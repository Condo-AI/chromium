{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
  },
  "exclude": ["build", "node_modules", "tmp"],
  "include": ["source"]
}
